#!/bin/bash
### BEGIN INIT INFO
# Provides:          <%=@name%>
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: <%=@name%> service
### END INIT INFO

set -e

user=<%=@name%>
exec=<%=@node_path%>
args="<%=@pa11y_path%>"
pidfile="/var/run/<%=@name%>.pid"
logfile="/var/log/<%=@name%>.log"
prog="<%=@name%>"

if [ "$1" = "status" ]; then
  if [ -f "$pidfile" ]; then
    echo
    echo "$prog is running ... PID=$(cat $pidfile)."
  else
    echo "$prog is not running."
  fi
  exit 1
fi

if [ -f "$pidfile" ]; then
  PID=$(cat $pidfile)
  if [ "$1" = "restart" -o "$1" = "stop" ]; then
    kill $PID
    rm $pidfile
  fi
fi

if [ "$1" = "start" -o "$1" = "restart" ]; then
  if [ ! -f "$pidfile" ]; then
    touch $pidfile
    chown $user $pidfile

    touch $logfile
    chown $user $logfile

    /bin/su - $user -c "$exec $args >> $logfile 2>&1 & echo \$! > $pidfile"
  fi
fi
